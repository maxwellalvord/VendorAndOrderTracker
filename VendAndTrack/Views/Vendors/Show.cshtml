<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using VendAndTrack.Models;
    <h3>Here are all the orders for this vendor:</h3>
    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Name</a></li>
    }
    </ol>
    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    <p><a href='/vendors'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
    <form action="/orders/delete" method="post">
      <button type="submit" name="button">Clear All Orders</button>
    </form>
  </body>
</html>